<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <akka>
    <hocon>
      <![CDATA[
					akka {
						actor {
            # provider = "Akka.Actor.LocalActorRefProvider, Akka"
							provider = "Akka.Cluster.ClusterActorRefProvider, Akka.Cluster"
							deployment {
								/fred {
									router = consistent-hashing-pool
									nr-of-instances = 5000
									cluster {
											enabled = on
                      virtual-nodes-factor = 8
											allow-local-routees = on
											use-role = entity
									}
								}
							}
						}
						
						remote {
							log-remote-lifecycle-events = DEBUG
							log-received-messages = on
							
							helios.tcp {
								transport-class = "Akka.Remote.Transport.Helios.HeliosTcpTransport, Akka.Remote"
								applied-adapters = []
								transport-protocol = tcp
								#will be populated with a dynamic host-name at runtime if left uncommented
								#public-hostname = "POPULATE STATIC IP HERE"
								hostname = "127.0.0.1"
								port = 2555
							}
						}            

						cluster {
							#will inject this node as a self-seed node at run-time
							seed-nodes = ["akka.tcp://test@127.0.0.1:2555"] #manually populate other seed nodes here, i.e. "akka.tcp://lighthouse@127.0.0.1:4053", "akka.tcp://lighthouse@127.0.0.1:4044"
							roles = ["entityHost"]
							auto-down-unreachable-after = 10s
						}
					}
			]]>
    </hocon>
  </akka>
</configuration>